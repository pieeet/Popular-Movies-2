<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/play_icon"
        android:src="@drawable/ic_play_arrow_black_24px"/>

    <TextView
        android:id="@+id/tv_trailer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/play_icon"
        app:layout_constraintLeft_toRightOf="@+id/play_icon"
        app:layout_constraintTop_toBottomOf="@+id/play_icon"
        tools:text="Trailer title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/play_icon"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/section_trailer_separator" />


</android.support.constraint.ConstraintLayout>